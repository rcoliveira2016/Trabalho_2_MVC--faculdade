@model IEnumerable<Trabalho_2_MVC.Dominio.Entidades.OrdemServico>

@{
    ViewBag.Title = "Listagem";
}

<h2>Listagem</h2>

<p>
    @Html.ActionLink(ConstsWeb.DescricaoAcaoCadastar, ConstsWeb.AcaoCadastar)
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Clinete
        </th>
        <th>
            Serviço
        </th>
        <th>
            Usuario
        </th>
        <th>
            Data de Abertura
        </th>
        <th>
            Valor Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Cliente.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servico.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Usuario.NomeCompleto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataAbertura)
    </td>
    <td>
        @item.ValorTotal
    </td>
    <td>
        @Html.ActionLink(ConstsWeb.DescricaoAcaoEditar, ConstsWeb.AcaoEditar, new { id = item.Id }) |
        @Html.ActionLink(ConstsWeb.DescricaoAcaoDetalhes, ConstsWeb.AcaoDetalhes, new { id = item.Id }) |
        @Html.ActionLink(ConstsWeb.DescricaoAcaoDeletar, ConstsWeb.AcaoDeletar, new { id = item.Id })
    </td>
</tr>
    }

</table>
